<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <div class="col-lg-8 col-12">
      <h1>All tasks</h1>
      <ul class="list-group">
        <% @tasks.each do |task| %>
          <li class="list-group-item"> <%= link_to task.title, task_path(task) %>
          <% if task.completed === true %>
            <i class="fas fa-check-square ms-3"></i>
            <% else %>
            <% end %>
        <% end %>
      </ul>
      <p class="mt-3"><%= link_to new_task_path do %>
      <i class="fas fa-plus"></i>
      <% end %>
      </p>
    </div>
  </div>
</div>
